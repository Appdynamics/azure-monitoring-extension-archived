{
	"id" : "ssl-certificate-monitoring-extension",
	"description" : "Azure Monitoring Extension",
	"version" : "1.0.0",
	"repoLink" : "https://github.com/Appdynamics/azure-monitoring-extension",
	"downloadFilename" : "AzureMonitor.zip",
	"configs" : [
		{
			"name" : "monitor.xml",
			"link" : "https://raw.githubusercontent.com/Appdynamics/azure-monitoring-extension/master/src/main/resources/config/monitor.xml",
			"args" : [
				{
                    "name" : "execution-style",
                    "displayName" : "Execution Style",
                    "defaultValue" : "periodic",
                    "description" : "The data to be reported from system performance counters periodically.",
                    "isOptional" : false
                },
				{
					"name" : "execution-frequency-in-seconds",
					"displayName" : "Execution Frequency",
					"defaultValue" : "60",
					"description" : "Determines the execution frequency in seconds.",
					"isOptional" : false
				},
				{
					"name" : "execution-timeout-in-seconds",
					"displayName" : "Execution Timeout",
					"defaultValue" : "60",
					"description" : "Determines the execution timeout in seconds.",
					"isOptional" : false
				},
				{
					"name" : "log-prefix",
					"displayName" : "Log Prefix",
					"defaultValue" : "[SslCertAppDMonitor] ",
					"description" : "Prefix used in logs. Helpful while debugging.",
					"isOptional" : true
				}
			]
		},
		{
			"name" : "config.yaml",
			"link" : "https://raw.githubusercontent.com/Appdynamics/ssl-certificate-monitoring-extension/master/src/main/resources/conf/config.yml"
		}
	]

}